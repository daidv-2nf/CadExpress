extends ../layout_no_header_footer

block content
  form.login-block.col-md-offset-4.col-md-4.block(method='POST')
    .page-header
    input(type='hidden', name='_csrf', value=_csrf)
    img(src='/images/logo1.png')
    .box-inside
      .editor
          input(type='email', name='email', id='email', placeholder='Enter the Login Id', autofocus, required)
      .editor
          input(type='password', name='password', id='password', placeholder='Enter the temporary password', required)
      .editor
          input(type='password', name='password', id='password', placeholder='Enter new password', required)
      .editor
          input(type='password', name='password', id='password', placeholder='Enter confirm password', required)
      button.btn(type='submit')
          | Change password
